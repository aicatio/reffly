{
  "name": "@aicat/reffly",
  "version": "1.0.0",
  "author": "Ali Hasan",
  "private": false,
  "license": "BSD-3-Clause",
  "main": "index.js",
  "module": "web/reffly-open.esm.js",
  "typings": "web/index.d.ts",
  "scripts": {
    "start": "run-p start:react start:server",
    "start:react": "rm -rf parcel src/index.html --out-dir temp/react --port=3011",
    "start:server": "nodemon server/api.js",
    "build": "run-p build:static build:server build:tsdx",
    "build:tsdx": "rm -rf .cache && rm -rf dist && tsdx build",
    "build:server": "rm -rf build/api && cp -R server build/api",
    "build:static": "rm -rf build/static && cp -R src/static build/static",
    "postbuild": "run-s cpbuilded cpexcluded cpothers",
    "cpbuilded": "rm -rf build/web && cp -R dist build/web",
    "cpexcluded": "cp src/configs.prod.ts build/reffconf.js",
    "cpothers": "cp LICENSE build/LICENSE && cp README.md build/README.md",
    "test": "tsdx test --passWithNoTests",
    "analyze": "size-limit --why",
    "lint": "tsdx lint",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "path": "dist/reffly-open.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/reffly-open.esm.js",
      "limit": "10 KB"
    }
  ],
  "staticFiles": {
    "staticPath": "src/static",
    "watcherGlob": "**"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.1",
    "@mui/lab": "^5.0.0-alpha.48",
    "@mui/material": "^5.0.1",
    "@mui/styles": "^5.0.1",
    "@types/js-cookie": "^2.2.7",
    "@types/react": "^16.8.6 || ^17.0.0",
    "@types/react-copy-to-clipboard": "^5.0.1",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.0",
    "axios": "^0.21.4",
    "formik": "^2.2.9",
    "js-cookie": "^3.0.1",
    "react": "^17.0.2",
    "react-app-polyfill": "^1.0.0",
    "react-cookie-consent": "^6.4.1",
    "react-copy-to-clipboard": "^5.0.4",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.3.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "babel-core": "^6.26.3",
    "babel-plugin-root-import": "^6.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "helmet": "^4.6.0",
    "husky": "^7.0.2",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^5.12.13",
    "nanoid": "^3.1.25",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "parcel": "1.12.3",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "size-limit": "^5.0.4",
    "ts-node": "^10.2.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "valid-url": "^1.0.9",
    "validator": "^13.6.0"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/a1ihasan"
  }
}
